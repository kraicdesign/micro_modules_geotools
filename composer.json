{
    "name"        : "micro-module/geotools",
    "type"        : "library",
    "description" : "Geo-related tools PHP 7.0+ library",
    "keywords"    : ["geotools", "geometry", "geocoder", "geocoding", "geoip", "bounds", "distance", "batch", "async", "geohash", "geolocation", "latlong", "latitude", "longitude"],
    "license"     : "MIT",

    "repositories": [{
        "type": "vcs",
        "url": "https://github.com/JurRutten/array-adapter"
    }],

    "authors" : [{
        "name"     : "Antoine Corcy",
        "email"    : "contact@sbin.dk",
        "homepage" : "http://sbin.dk",
        "role"     : "Developer"
    }],

    "support" : {
        "issues" : "https://github.com/thephpleague/geotools/issues",
        "source" : "https://github.com/thephpleague/geotools"
    },

    "replace" : {
        "toin0u/geotools" : "*"
    },

    "require" : {
        "php"                     : "^7.1 || ^8.1",
        "psr/cache"               : "^1.0 || ^2.0 || ^3.0",
        "willdurand/geocoder"     : "^4.2",
        "react/promise"           : "^2.2 || ^3.2",
        "symfony/console"         : "^5.0 || ^6.0 || ^7.0",
        "symfony/property-access" : "^5.0 || ^6.0 || ^7.0",
        "symfony/serializer"      : "^5.0 || ^6.0 || ^7.0",
        "react/event-loop"        : "1.5.*",
        "php-http/discovery"      : "^1.0",
        "ext-bcmath": "*",
        "symfony/cache": "^7.2"
    },

    "require-dev" : {
        "phpunit/phpunit"         : "^10.0"
    },

    "autoload" : {
        "psr-4" : {
            "League\\Geotools\\"        : "src",
            "League\\Geotools\\Tests\\" : "tests"
        }
    },

    "bin" : ["bin/geotools"],

    "extra" : {
        "branch-alias" : {
            "dev-master" : "0.7-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}
